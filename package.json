{
  "name": "YamaD.me",
  "version": "1.6.0",
  "dependencies": {
    "katex": "0.16.4",
    "sanitize.css": "13.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "1.0.6",
    "@sveltejs/kit": "1.3.10",
    "cssnano": "5.1.14",
    "cssnano-preset-advanced": "5.3.9",
    "js-beautify": "1.14.7",
    "mdsvex": "0.10.6",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.21",
    "postcss-load-config": "4.0.1",
    "rehype-katex-svelte": "1.1.2",
    "rehype-slug": "5.1.0",
    "remark-math": "3.x",
    "sass": "1.58.0",
    "svelte": "3.55.1",
    "svelte-check": "3.0.3",
    "svelte-preprocess": "5.0.1",
    "svelte-sitemap": "2.5.4",
    "tslib": "2.5.0",
    "typescript": "4.9.5",
    "vite": "4.1.1"
  },
  "scripts": {
    "build": "run-s build:arch build:static",
    "build-font": "scripts/font.sh",
    "build-ipfs": "scripts/ipfs.sh",
    "build:arch": "git archive --prefix=src/ -o static/src.tgz HEAD",
    "build:static": "run-s stage:kit stage:404 stage:sitemap stage:beautify",
    "check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
    "check-watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
    "dev": "vite dev",
    "dev-host": "vite dev --host",
    "preview": "vite preview",
    "preview-host": "vite preview --host",
    "stage:404": "mv build/404/index.html build/404.html && rmdir build/404",
    "stage:beautify": "scripts/beautify.sh",
    "stage:kit": "vite build",
    "stage:sitemap": "svelte-sitemap -d https://yamad.me -i 404.html"
  },
  "type": "module"
}
