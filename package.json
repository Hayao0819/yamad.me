{
  "name": "YamaD.me",
  "version": "1.3.0",
  "dependencies": {
    "katex": "0.16.2",
    "sanitize.css": "13.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "1.0.0-next.44",
    "@sveltejs/kit": "1.0.0-next.507",
    "cssnano": "5.1.13",
    "cssnano-preset-advanced": "5.3.8",
    "glob-run": "0.1.7",
    "js-beautify": "1.14.6",
    "mdsvex": "0.10.6",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.17",
    "postcss-load-config": "4.0.1",
    "rehype-katex-svelte": "1.1.2",
    "remark-math": "3.x",
    "sass": "1.55.0",
    "svelte": "3.50.1",
    "svelte-check": "2.9.1",
    "svelte-preprocess": "4.10.7",
    "svelte-sitemap": "2.5.2",
    "tslib": "2.4.0",
    "typescript": "4.8.4",
    "vite": "3.1.4"
  },
  "scripts": {
    "build": "run-s build:arch build:static",
    "build-font": "scripts/font.sh",
    "build-ipfs": "scripts/ipfs.sh",
    "build:arch": "git archive --prefix=src/ -o static/src.tgz HEAD",
    "build:static": "run-s stage:kit stage:404 stage:sitemap stage:beautify",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check-watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite dev",
    "dev-host": "vite dev --host",
    "preview": "vite preview",
    "preview-host": "vite preview --host",
    "stage:404": "mv build/404/index.html build/404.html && rmdir build/404",
    "stage:beautify": "html-beautify -r -s 2 -E [] --no-preserve-newlines 'build/**/*.html'",
    "stage:kit": "vite build",
    "stage:sitemap": "svelte-sitemap -d https://yamad.me -i '404.html'"
  },
  "type": "module"
}
