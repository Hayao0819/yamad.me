{
  "name": "YamaD.me",
  "version": "1.1.0",
  "dependencies": {
    "katex": "0.16.0",
    "sanitize.css": "13.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "cssnano": "5.1.13",
    "cssnano-preset-advanced": "5.3.8",
    "js-beautify": "1.14.5",
    "mdsvex": "0.10.6",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.16",
    "postcss-load-config": "4.0.1",
    "rehype-katex-svelte": "1.1.2",
    "remark-math": "3.x",
    "sass": "1.54.4",
    "svelte": "3.49.0",
    "svelte-check": "2.8.0",
    "svelte-preprocess": "4.10.7",
    "svelte-sitemap": "2.5.1",
    "tslib": "2.4.0",
    "typescript": "4.7.4",
    "vite": "3.0.7"
  },
  "scripts": {
    "build": "run-s build:src build:main",
    "build-font": "bash scripts/font.sh",
    "build-ipfs": "bash scripts/ipfs.sh",
    "build:main": "run-s stage:kit stage:404 stage:sitemap stage:beautify",
    "build:src": "git archive --prefix=src/ -o static/src.tgz HEAD",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check-watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite dev",
    "dev-host": "vite dev --host",
    "preview": "vite preview",
    "preview-host": "vite preview --host",
    "stage:404": "mv build/404/index.html build/404.html && rmdir build/404",
    "stage:beautify": "html-beautify -r -s 2 -E [] --no-preserve-newlines 'build/**/*.html'",
    "stage:kit": "vite build",
    "stage:sitemap": "svelte-sitemap -d https://yamad.me -i '404.html'"
  },
  "type": "module"
}
